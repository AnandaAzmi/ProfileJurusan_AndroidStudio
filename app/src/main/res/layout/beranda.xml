<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/beranda_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEC8DBFB"
    tools:context=".BerandaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardbg_beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-10dp"

        android:layout_marginEnd="411dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/bg_beranda"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            app:srcCompat="@drawable/bgcrop" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlogo_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"

            android:layout_marginRight="16dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/logo_polsri"
                android:layout_width="141dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/logopolsri" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/raihcita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="30dp"

            android:text="Raih Cita Citamu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menjadi_engin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"

            android:text="Menjadi Seorang Engineer !"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/search_shape"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:ems="17"
            android:hint="Search for..."
            android:inputType="text"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:paddingLeft="15dp" />

    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/cardbg_beranda"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_yt1"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/title_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POLSRI YOUTUBE CHANNEL"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gambar_y1" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_yt2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gambar_y2" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/berita_terkini"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/rounded_2corner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Berita Terkini"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/kotak_berita2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/berita_shape"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:layout_margin="0dp"
                    app:srcCompat="@drawable/kaldik" />

                <TextView
                    android:id="@+id/judul_berita2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Kalender Akademik 2024/2025"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsi_berita2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Kalender akademik adalah jadwal yang berisi tanggal-tanggal penting dalam lingkungan ..."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_baca_selengkapnya2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Baca Selengkapnya" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kotak_berita1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/search_shape"
                android:orientation="vertical"
                android:padding="10dp"
                tools:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="0dp"
                    app:srcCompat="@drawable/berita2" />

                <TextView
                    android:id="@+id/judul_berita1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Internship to be Employment 40 Mahasiswa Jurusan Teknik Mesin"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsi_berita1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Deskripsi singkat berita terkini akan muncul di sini."
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/button_baca_selengkapnya1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Baca Selengkapnya" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>