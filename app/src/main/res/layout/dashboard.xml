<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_yt1"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gambar_y1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_yt2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/gambar_y2" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardbg_beranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="-10dp"

        android:layout_marginEnd="411dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/bg_beranda"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            app:srcCompat="@drawable/dashboard_image" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlogo_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"

            android:layout_marginRight="16dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/logo_polsri"
                android:layout_width="141dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/logopolsri" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/raihcita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="120dp"
            android:layout_marginRight="30dp"

            android:text="Raih Cita Citamu"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menjadi_engin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"

            android:text="Menjadi Seorang Engineer !"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:background="@drawable/rounded_all_corner_shape"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:ems="17"
            android:hint="Search for..."
            android:inputType="text"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:paddingLeft="15dp" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Icon dan label untuk menu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/icon_spmb"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/spmb_icon" />

            <TextView
                android:id="@+id/label_spmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPMB"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/icon_program_studi"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/prodi_icon2" />

            <TextView
                android:id="@+id/label_program_studi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program Studi"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/icon_fasilitas"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/fasilitas_icon2" />

            <TextView
                android:id="@+id/label_fasilitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/icon_dosen_tendik"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/teacher_icon" />

            <TextView
                android:id="@+id/label_dosen_tendik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosen dan Tendik"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>