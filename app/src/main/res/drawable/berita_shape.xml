<!-- res/drawable/shadow_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#96F2F2F2" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:right="2dp"
        android:left="3dp"
        android:top="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFF" /> <!-- Warna bayangan -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>